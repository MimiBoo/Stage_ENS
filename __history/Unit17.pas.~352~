      Form17.Panel8.Color:= BtnBlue;
      Form17.Panel8.Font.Color:=  TColor(RGB(255, 255, 255));

      Form17.Panel9.Color:= BtnBlue;
      Form17.Panel9.Font.Color:=  TColor(RGB(255, 255, 255));
end;

